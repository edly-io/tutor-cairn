---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: fss-pv-cairn-vector
spec:
  capacity:
    storage: 100Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  csi:
    driver: fss.csi.oraclecloud.com
    volumeHandle: "{{ CAIRN_VECTOR_OCI_FILE_SYSTEM_OCID }}:{{ CAIRN_VECTOR_OCI_FILE_SYSTEM_MOUNT_IP }}:{{ CAIRN_VECTOR_OCI_FILE_SYSTEM_MOUNT_PATH }}"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: cairn-vector
  labels:
    app.kubernetes.io/component: volume
    app.kubernetes.io/name: cairn-vector
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: ""
  resources:
    requests:
      storage: 20Gi
  volumeName: fss-pv-cairn-vector

